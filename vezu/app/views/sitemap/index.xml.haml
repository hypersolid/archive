- base_url = HOST
!!! XML
%urlset{:xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9"}
  %url
    %loc=base_url
    %lastmod=Date.today
    %changefreq weekly
    %priority 1
  - for c in @categories
    %url
      %loc #{base_url}/#{c.name}
      %lastmod=Date.today
      %changefreq weekly
      %priority 1
  - for f in @firms
    %url
      %loc #{base_url}#{f.url}
      %lastmod=Date.today
      %changefreq daily
      %priority 1
  - for p in @pages
    %url
      %loc #{base_url}/pages/#{p.slug}
      %lastmod=Date.today
      %changefreq monthly
      %priority 0.5