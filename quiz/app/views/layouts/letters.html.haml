%html
  %head
  %body{:width => "100%", :height => "100%", :style => "background-image:url(#{root_url + "images/emails/background.jpg"});background-color:#07080c;background-repeat:no-repeat;background-position:center;color:#a1b0d6;padding:0px 50px 40px 50px; margin:0px; font-family: arial, Helvetica,sans-serif;"}
    %table{:cellpadding => "0", :cellspacing => "0"}
      %tr
        %td{:align => "center", :colspan => "3", :height => "20", :style => "font-size:12px"}
          If you can't view this email, please
          %a{:href => email_fallback_url(@fallback.token), :style => "color:#a1b0d6;"}
            click here
          %td
      %tr
        %td{:align => "center", :colspan => "3", :height => "100", :valign => "middle"}
          %img{:src => root_url + "images/emails/gameshow.png", :alt => "GameShow"}
      %tr
        %td{:width => "50%"}
        %td{:align => "center", :style => "background-image:url(#{root_url + "images/emails/transparent_white.png"});padding:8px;"}
          %table{:cellpadding => "0", :cellspacing => "0", :style => "background-color:#090e13;padding:50px;", :width => "600"}
            %tr
              %td{:style => "border-bottom:1px solid #455163;padding:0px;margin:0px;color:#fff"}
                = yield :header
            %tr
              %td{:style => "color:#fff;padding-top:20px"}
                %h1{:style => "margin-bottom:5px;font-weight:300;"} 
                  = yield :greetings
                %span{:style => "font-size:18px"}
                  = yield
            - if @link 
              %tr
                %td{:align => "center", :style => "padding-top:50px"}
                  %a{:href => @link[1], :style => "padding:15px;background-color:white;border:10px solid #89ba44;color:#162100;font-size:24px;font-weight:bold"}
                    = @link[0]
        %td{:width => "50%"}
      %tr
        %td{:align => "center", :colspan => "3", :style => "font-size:12px;padding-top:5px", :valign => "top"}
          This email was sent through
          %a{:href => root_url, :style => "color:#a1b0d6;"} GameShow.com
          - if @user
            %br
            To change subscription settings go to
            = link_to('your account', edit_user_url(@user), :style => "color:#a1b0d6;") + '.'