= form_for(@user, :url => (@user.new_record? ? admin_users_path : admin_user_path(@user))) do |f|  
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this admin_user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :admin
    = f.check_box :admin

  .field
    = f.label :credits
    = f.text_field :credits

  .actions
    = f.submit 'Save'
